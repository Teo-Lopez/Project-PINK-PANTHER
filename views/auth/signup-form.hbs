<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-4">
            <hr>
            <h2>Registro de usuario</h2>
            <br>
            <hr>
            <br>

            <form action="/registro" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="userPwd">
                </div>

                <button type="submit" class="btn btn-outline-success btn-block">Registrarme</button>
            </form>

            {{#if errorMsg}}
            <p id="errorMessage">{{errorMsg}}</p>
            {{/if}}

            <hr>

            <p>¿Ya estás registrad@? <a href="/inicio-sesion">Inicia sesión</a>.</p>

        </div>
    </div>


</div>